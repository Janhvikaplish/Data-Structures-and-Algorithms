class Kadane{
    
    // Function to find subarray with maximum sum
    // arr: input array
    // n: size of array
    int maxSubarraySum(int arr[], int n){
        
        // Your code here 
       
    int maxsofar=Integer.MIN_VALUE;
    int maxendinghere=0;
    for(int i=0;i<n;i++)
    {
        maxendinghere+=arr[i];
        if(maxsofar<maxendinghere)
        maxsofar=maxendinghere;
        if(maxendinghere<0)
        maxendinghere=0;
    }
    return maxsofar;
       
        
    }
    
}

