class Solution{

    
    // Function to convert the given array to wave like array
    // arr: input array
    // n: size of the array
    public static void convertToWave(int a[], int n){
        
        // Your code here
        int temp;
        for(int i=0;i<n-1;i=i+2)
        {
            temp=a[i];
            a[i]=a[i+1];
            a[i+1]=temp;
        }
        
    }
    
}


